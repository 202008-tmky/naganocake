<div class="col-lg-10 offset-1 space">
  <div class="row">
   <h2>注文情報確認</h2>
  </div>
  <div class="col-lg-7">
    <%= form_with(model: @order, local: true) do |f| %>
      <table class="table table-striped table-bordered">
    <thead>
    <tr>
    <th></th>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    </tr>
    </thead>
    <tbody>
    <% sum_all = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= link_to item_path(cart_item.item) do %>
        <%= attachment_image_tag(cart_item.item, :image, :fill, 100, 100, fallback: "no_img.jpg") %>
        <% end %>
      </td>
      <td>
        <%= link_to item_path(cart_item.item) do %>
        <%= cart_item.item.name %>
        <% end %>
      </td>
      <td>
        <%= cart_item.item.price*1.1 %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= sum_item = cart_item.item.price*1.1.to_i * cart_item.amount %>円
        <% sum_all += sum_item %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
  </div>
  <div class="col-lg-5">
    <table class="table  table-bordered">
  　　　 <tr>
           <th><strong>送料</strong></th>
           <td><%= @order.shipping_cost %>円</td>
        </tr>
        <tr>
          <th><strong>商品合計</strong></th>
          <td><%= sum_all.to_i %>円</td>
        </tr>
        <tr>
         <th><strong>ご請求額</strong></th>
          <td><% billling_amount = sum_all + @order.shipping_cost.to_i %>
          <%= billling_amount.to_i %>円</td>
        </tr>
    </table>
  </div>
  </div>
  <div class="row space">
    <div class="col-lg-2">
      <h3>支払方法</h3>
    </div>
    <div class="col-lg-4">
      <%= @order.payment_method %>
    </div>
  </div>

  <div class="row space">
    <div class="col-lg-2">
      <h3>お届け先</h3>
    </div>
    <div class="col-lg-4">
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :postal_code, :value => "#{@order.postal_code}" %>
  <%= f.hidden_field :address, :value => "#{@order.address}" %>
  <%= f.hidden_field :name, :value => "#{@order.name}" %>
  <%= f.hidden_field :total_payment, :value => billling_amount.to_i %>
  <%= f.hidden_field :shipping_cost, :value => "600" %>
<div class="row space">
 <div class="col-lg-2 offset-lg-5" >
    <%= f.submit "購入を確定する", class: "btn btn-danger btn-lg" %>
  </div>
</div>
<% end %>
</div>