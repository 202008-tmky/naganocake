<h3>ショッピングカート</h3>
<%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: 'btn btn-danger' %>
<table class="table">
  <thead>
    <tr>
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th colspan="3"></th>
	</tr>
  </thead>

  <tbody>
	<% sum_all = 0 %>
	<% @cart_items.each do |cart_item| %>
	  <tr>

		<td>
			<%= link_to item_path(cart_item.item) do %>
			<%= attachment_image_tag(cart_item.item, :image, :fill, 50, 50, fallback: "no_image.jpg") %>
			<% end %>

			<%= link_to item_path(cart_item.item) do %>
			<%= cart_item.item.name %>
			<% end %>
		</td>


		<td><%= (cart_item.item.price*1.1).to_i %>円</td>



		<td>
			<%= form_with model: cart_item, local: true do |f| %>
			<%= f.number_field :amount, value: cart_item.amount, min:1, max:99 %>
			<%= f.submit "変更", class: "btn btn-primary" %>
			<% end %>
		</td>


		<td>
			<%= sum_item = (cart_item.item.price*1.1).to_i * cart_item.amount %>円
			<% sum_all += sum_item %>
		</td>


		<td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
		</tr>
	<% end %>
  </tbody>
</table>


	<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>

	<h4>合計金額:<%= sum_all %>円</h4>



	<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-lg" %>
