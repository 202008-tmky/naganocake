<%= flash.now[:success] %>
<%= render "admins/shared/error_messages", resource: @genre %>
<div class="container">
	<div class="row">

		    <div class="col-lg-6 offset col-lg-3">
		    <h3>ジャンル一覧・追加</h3>
		    <br>
				<%= form_for @genre, url: admins_genres_path do |f| %>
                    <%= f.label :ジャンル %>
					<%= f.text_field :name %>
					<%= f.select :is_active ,[['有効',true],['無効',false]] %>
					<%= f.submit '追加', class: "btn btn-primary" %>
				<% end %>
			<br>
				<table class="table">
					<thead>
						<tr>
						    <th>ジャンル</th>
					    	<th>状態</th>
					    	<th></th>
						</tr>
					</thead>
					<tbody>
					  <% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= genre.is_active ? '有効' : '無効'%></td>
							<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
						</tr>
					  <% end %>
				    </tbody>
				</table>
	        </div>

	</div>
</div>

