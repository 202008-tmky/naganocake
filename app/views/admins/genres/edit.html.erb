<%= flash.now[:success] %>
<%= render "admins/shared/error_messages", resource: @genre %>

<div class="container">
	<div class="row">

	 	<div class="col-lg-12">
		    <h3>ジャンル編集</h3>
			<br>
			<%= form_for @genre, url: admins_genre_path do |f| %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<%= f.select :is_active ,[['有効',true],['無効',false]] %>
				<%= f.submit '変更を保存する', class:"btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>