<div class="box">
	<p><strong>ジャンル検索</strong></p>

    <% genres.each do |genre| %>
        <% if genre.is_active == true %>
            <table class="table table-striped table-bordered">
                <td><%= link_to genre.name, genre_path(genre.id) %></td>
	        </table>
	    <% end %>
	<% end %>
</div>