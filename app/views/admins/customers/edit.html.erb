<div class="container">
	<div class="row">
		<div class="col-lg-2"></div>

		<div class="col-lg-8">
		<h3><%= @customer.first_name + @customer.last_name + "さんの会員情報編集" %> </h3>
		<br>
    <%= render "admins/shared/error_messages", resource: @customer %>
		<%= form_for @customer, url: admins_customer_path do |f| %>
			<table class="table">
				<tr>
					<td>顧客ID</td>
    			    <td><%= @customer.id %></td>
   				</tr>
   				<tr>
					<td>氏名</td>
					<td>
						<%= f.text_field :first_name %>
						<%= f.text_field :last_name %>
					</td>
				</tr>
   				<tr>
					<td>フリガナ</td>
					<td>
					    <%= f.text_field :first_name_kana %>
						<%= f.text_field :last_name_kana %>
					</td>
				</tr>
   				<tr>
					<td>郵便番号</td>
					<td><%= f.text_field :postal_code %></td>
    			</tr>
    			<tr>
					<td>住所</td>
					<td><%= f.text_field :address %></td>
    			</tr>
   				 <tr>
					<td>電話番号</td>
					<td><%= f.text_field :telephone_number %></td>
				</tr>
    			<tr>
					<td>メールアドレス</td>
					<td><%= f.text_field :email %></td>
				</tr>
  			    <tr>
					<td>会員ステータス</td>
					<td><%= f.select :is_deleted ,[['有効',true],['無効',false]] %></td>
				</tr>
			</table>

			<%= f.submit "変更を保存する", class:"btn btn-primary" %>
		<% end %>

		</div>

		<div class="col-lg-2"></div>

	</div>
</div>