<h2>商品編集</h2>

<%= form_for @item, url: admins_item_path do |f| %>
	<div class="item-edit-image">
		<%= attachment_image_tag @item, :image, :fill, 100, 100, fallback: "no_image.jpg"%>
	</div>
	<%= f.attachment_field :image, placeholder: "商品画像" %>
	<h5>商品名</h5>
	<%= f.text_field :name %>
	<h5>商品説明</h5>
	<%= f.text_area :introduction %>
	<h5>ジャンル</h5>
	<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => true %>
	<h5>税抜価格</h5>
	<%= f.text_field :price %>
	<h5>販売ステータス</h5>
	<%= f.select :is_active ,[['有効',true],['無効',false]] %>

	<%= f.submit "変更を保存" %>
<% end %>