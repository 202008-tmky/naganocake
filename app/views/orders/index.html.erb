<div class="col-lg-10 offset-1 space">

  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>
  <% @orders.each do |order| %>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
    <th></th>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
    </tr>
    </thead>
    <tbody>
    <tr class="row space-sm">
    <td class="col-lg-2">
      <%= l order.created_at %>
    </td>
    <td class="col-lg-5">
        <%= order.postal_code + " " + order.address %>
      </td>
    <td class="col-lg-2">
      <% sum_all = 0 %>
      <% order.order_details.each do |order_detail| %>
      <%= order_detail.item.name %><br>
      <% sub_total = order_detail.price.to_i * order_detail.amount %>
      <% sum_all += sub_total.to_i %>
      <% end %>
    </td>
    <td class="col-lg-2">
      <%= sum_all += order.shipping_cost.to_i %>円
    </td>
    <td class="col-lg-1">
      <%= order.status %>
    </td>
    <td class="col-lg-2">
      <%= link_to '表示する', order_path(order), class: "btn btn-sm btn-danger" %>
    </td>
    </tr>
    </tbody>
  </table>
  <% end %>

</div>