<body>
 <h2>商品詳細</h2>

  <div class="row">
　    <div class="col-xs-12">
<!-- 左側画像表示 -->
　　   <div class="col-xs-3">
　　   	  <div id="img_field">
　　        <%= attachment_image_tag(@item, :image, size: "60×60", fallback: "no_image.jpg") %>
          </div>
   	  </div>


<!-- 右商品詳細 -->
  <div class="row">
      <div class="col-xs-9">
	      <div><p>商品名<%= @item.name %></p></div>
		  <div><p>商品説明<%= @item.introduction %></p></div>
		  <div><p>ジャンル<%= @item.genre.name %></p></div>
<!-- 　税込価格　税抜価格　　　　　 -->
		  <div><p>税込価格(税抜価格)<%= (@item.price*1.1).to_i %>　<%= @item.price %>円</p></div>


<!--  販売ステータス-->
           <p>販売ステータス
		     <% if @item.is_active == true %>
							　販売中
			   <% elsif @item.is_active == false %>
							　売り切れ
			 <% end %>
		   </p>
　　　</div>
  </div>

        <p><%= link_to "編集する", edit_admins_item_path(@item), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user" %></p>
</body>
