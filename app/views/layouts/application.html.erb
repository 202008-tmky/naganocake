<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="navbar navbar-inverse">
    <div class="container-fluid">
      <nav class="navbar-header">
         <h1><%= link_to 'NaganoCake', root_path %></h1>
      </nav>
      <ul class="nav navbar-nav navbar-right">
                <% if admin_signed_in? %>
                    <li class="nav-item"><%= link_to '商品一覧', admins_items_path %></li>
                    <li class="nav-item"><%= link_to '会員一覧', admins_customers_path %></li>
                    <li class="nav-item"><%= link_to '注文履歴一覧', admins_orders_path %></li>
                    <li class="nav-item"><%= link_to 'ジャンル一覧', admins_genres_path %></li>
                    <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
                <% elsif customer_signed_in? %>
                    <li style="text-align:right; padding: 10px 10px 0 0; color:white;">
                      ようこそ<%= current_customer.first_name %>さん！！</li>
                    <li class="nav-item"><%= link_to 'About', customer_about_path %></li>
                    <li class="nav-item"><%= link_to '商品一覧', items_path %></li>
                    <li class="nav-item"><%= link_to '新規登録', new_customer_registration_path %></li>
                    <li class="nav-item"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %>
                    </li>
                <% else %>
                <li class="nav-item"><%= link_to 'About', customer_about_path %></li>
                    <li class="nav-item"><%= link_to '商品一覧', items_path %></li>
                    <li class="nav-item"><%= link_to '新規登録', new_customer_registration_path %></li>
                    <li class="nav-item"><%= link_to 'ログイン', new_customer_session_path %></li>
                </ul>
                <% end %>
      </div>
  </header>
  <body>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>