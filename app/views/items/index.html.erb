<div class="row">

    <!-- ジャンル選択のサイドバー -->
    <%= render "items/genres_sidebar", genres: @genres %>
    <!-- ジャンル選択のサイドバー -->
    <div class="item-index">
    <h3>商品一覧</h3>
        <table>
          <tbody>
            <tr class="item-box">
              <% @items.each do |item| %>
                <td class="item">
                    <%= link_to item_path(item) do %>
                      <%= attachment_image_tag(item, :image, size: "40×60", fallback:"top.image.jpg") %><br>
            	      <%= item.name %><br>
            	      ￥<%= item.price %>
                    <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>

        <%= paginate @items %>
    </div>
</div>