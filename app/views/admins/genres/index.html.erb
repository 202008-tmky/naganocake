<div class="container">
    <div class="row">
		<h1>ジャンル一覧・追加</h1>
			　　<h3>ジャンル</h3>
					<%= form_for @genre, url: admins_genres_path do |f| %>
					<%= f.text_field :name %>
					<%= f.select :is_active ,[['有効',true],['無効',false]] %>
					<br><%= f.submit '追加' %></br>
					<% end %>
					<table class="table">
						<thead>
						<tr>
						<th>ジャンル</th>
						<th>状態</th>
						</tr>
						</thead>
						<tbody>
							<% @genres.each do |genre| %>
							<tr>
							<td>
							<%= genre.name %>
							</td>
							<td>
							<%= genre.is_active ? '有効' : '無効'%>
							</td>
							<td>
							<%= link_to "編集する", edit_admins_genre_path(genre.id) %>
							</td>
							</tr>
							<% end %>
				        </tbody>
					</table>
	</div>
</div>
