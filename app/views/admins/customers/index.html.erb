<div class="container">
  <div class="row">


    <div class="col-lg-1">
    </div>

    <div class="col-lg-10 offset-lg-1">
<br>
      <h3>会員一覧</h3>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        	<% @customers.each do |customer| %>
        		<tr>
        			<td><%= customer.id %></td>
        			<td><%= link_to customer.first_name + customer.last_name , admins_customer_path(customer.id) %></td>
          		<td><%= customer.email %></td>
  		      	<td><%= customer.is_deleted ? '無効' : '有効'%></td>
  	       	</tr>
  	      <% end %>
        </tbody>
      </table>

      <div style="text-align: center">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>