<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="navbar navbar-inverse">
    <div class="container-fluid">
      <nav class="navbar-header">
         <h1><%= link_to 'NaganoCake', root_path %></h1>
      </nav>
      <ul class="nav navbar-nav navbar-right">
                <% if admin_signed_in? %>
                    <li class="nav-item"><%= link_to '商品一覧', admins_items_path %></li>
                    <li class="nav-item"><%= link_to '会員一覧', admins_customers_path %></li>
                    <li class="nav-item"><%= link_to '注文履歴一覧', admins_orders_path %></li>
                    <li class="nav-item"><%= link_to 'ジャンル一覧', admins_genres_path %></li>
                    <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
                    <li class="nav-item1">
                    <%= form_tag(admins_search_path, method: :get) do %>
                      <%= text_field_tag 'search[content]' %>
                      <%= select_tag 'search[model]', options_for_select({ "顧客" => "customer", "商品" => "item" }) %>
                      <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
                      <%= submit_tag '検索', class: "btn btn-primary" %>
                    <% end %>
                    </li>
                <% elsif customer_signed_in? %>
                    <li class="nav-item"><%= link_to 'マイページ', customer_path(current_customer) %></li>
                    <li class="nav-item"><%= link_to '商品一覧', items_path %></li>
                    <li class="nav-item"><%= link_to 'カート', cart_items_path %></li>
                    <li class="nav-item"><%= link_to 'ログアウト',
                    destroy_customer_session_path, method: :delete %></li>
                <% else %>
                <li class="nav-item"><%= link_to 'About', customer_about_path %></li>
                    <li class="nav-item"><%= link_to '商品一覧', items_path %></li>
                    <li class="nav-item"><%= link_to '新規登録', new_customer_registration_path %></li>
                    <li class="nav-item"><%= link_to 'ログイン', new_customer_session_path %></li>
                </ul>
                <% end %>
      </div>
  </header>
  <body>
  <div class="wrapper">
    <div class="container">
    <%= yield %>
    </div>
    <div class="push"></div>
    <footer>
    <p>© All rights reserved by NaganoCake.</p>
   </footer>
  </div>
  </body>
</html>