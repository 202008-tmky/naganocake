<body>
  <!-- 配送先の登録 -->
      <h3>配送先登録/一覧</h3>
      <%= form_for (@shipping_address) do |f| %>
        <table>
	      <tr>
		    <th>郵便番号(ハイフンなし)</th>
		    <td><%= f.text_field :postal_code %></td>
	      </tr>
	      <tr>
		    <th>住所</th>
		    <td><%= f.text_field :address %></td>
	      </tr>
	     　<tr>
		    <th>宛名</th>
		    <td><%= f.text_field :name %></td>
	      </tr>
	    </table>
	      <%= f.submit "登録する" %>
      <% end %>
  <!-- 配送先の一覧/編集/削除/ -->
  <table>
  	<thead>
	  <tr>
	    <th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
		<th></th>
	  </tr>
    </thead>
	<% @shipping_addresses.each do |shipping_address| %>
	  <tbody>
	    <tr>
		  <td>
			<%= shipping_address.postal_code %>
		  </td>
		  <td>
			<%= shipping_address.address %>
		  </td>
		  <td>
			<%= shipping_address.name %>
		  </td>
		  <td>
		  	<%= link_to "編集する", edit_address_path(shipping_address) %>
			<%= link_to "削除する", address_path(shipping_address), method: :delete %>
		  </td>
	    </tr>
	  </tbody>
	<% end %>
  </table>
</body>