<body>
  <div  class="low">
	<!-- 注文情報部分 -->
	<div class="col-xs-7">
	<h3>注文履歴詳細</h3>
		<p>注文情報</p>
			<table class="table  table-bordered">
			<tr>
				<th>注文日</th>
				<td><%= @order.created_at.strftime('%Y年%m月%d日') %></td>
			</tr>
			<tr>
				<th>配送先</th>
				<td>
					<%= @order.postal_code %><br>
					<%= @order.address %><br>
					<%= @order.name %>
				</td>
			</tr>
			<tr>
				<th>支払方法</th>
				<td><%= @order.payment_method %></td>
			</tr>
			<tr>
				<th>ステータス</th>
				<td><%= @order.status %></td>
			</tr>
			</table>
     </div>

	<!-- 請求情報 -->
    <div class="col-xs-3">
		<p>請求情報</p>
		<table class="table  table-bordered">
			<tbody>
			<tr>
				<th>商品合計</th>
				<td><%= @sum %>円</td>
			</tr>
			<tr>
				<th>配送料</th>
				<td><%= @order.shipping_cost %>円</td>
			</tr>
			<tr>
				<th>ご請求額</th>
				<td><%= @sum + @order.shipping_cost %>円</td>
			</tr>
			</tbody>
		</table>
	</div>

	<!-- 注文内容 -->
	<div class="col-xs-7">
		<p>注文内容</p>
	  <table class="table  table-bordered">
		<thead>
			<tr>
				<th>商品</th>
				<th>単価（税込）</th>
				<th>個数</th>
				<th>小計</th>
			</tr>
		</thead>
	    <tbody>
			<% @order.order_details.each do |detail| %>
			<tr>
				<td><%= detail.item.name %></td>
				<td><%= (detail.price*1.1).to_i %></td>
				<td><%= detail.amount %></td>
				<td><%= (detail.price*1.1).to_i * detail.amount %>円</td>
			  　<% end %>
			</tr>
	    </tbody>
	  </table>
 	</div>
 </div>
</body>
