<h3><%= @customer.last_name + @customer.first_name + "さんの会員情報編集" %> </h3>

<%= form_for @customer, url: admins_customer_path do |f| %>
	<h4>顧客ID</h>
	<p>
		<%= @customer.id %>
	</p>

	<h4>氏名</h4>
	<%= f.text_field :last_name %>
	<%= f.text_field :first_name %>

	<h4>フリガナ</h4>
	<%= f.text_field :last_name_kana %>
	<%= f.text_field :first_name_kana %>

	<h4>郵便番号</h4>
	<%= f.text_field :postal_code %>

	<h4>住所</h4>
	<%= f.text_field :address %>

	<h4>電話番号</h4>
	<%= f.text_field :telephone_number %>

	<h4>メールアドレス</h4>
	<%= f.text_field :email %>

	<h4>会員ステータス</h4>
	<%= f.select :is_deleted ,[['有効',true],['無効',false]] %>

	<%= f.submit "変更を保存する" %>

<% end %>