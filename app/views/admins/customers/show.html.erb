<div class="container">
	    <div class="row">
		<div class="col-lg-2"></div>

  <br>

  <h3><%= @customer.last_name + @customer.first_name + "さんの会員詳細" %> </h3>

    <div class="row">
		<div class="col-lg-8">
			<table class="table table-borderless">

				<tr>
					<td>顧客ID</td>
					<td>
					    <%= @customer.id %>
					    <%= @customer.is_deleted ? '有効' : '無効' + "会員" %>
					</td>
				</tr>

				<tr>
					<td>氏名</td>
					<td><%=@customer.last_name + @customer.first_name %></td>
				</tr>

				<tr>
					<td>フリガナ</td>
					<td><%=@customer.last_name_kana + @customer.first_name_kana %></td>
				</tr>

				<tr>
					<td>郵便番号</td>
					<td><%=@customer.postal_code %></td>
				</tr>

				<tr>
					<td>住所</td>
					<td><%=@customer.address %></td>
				</tr>

				<tr>
					<td>電話番号</td>
					<td><%=@customer.telephone_number %></td>
				</tr>

				<tr>
					<td>メールアドレス</td>
					<td><%=@customer.email %></td>
				</tr>
			</table>
		</div>

            <div>
                <%= link_to "編集する", edit_admins_customer_path(@customer), class:"btn btn-primary" %>
                <%= link_to "注文履歴を見る", admins_orders_path(@customer),  class:"btn btn-primary" %>
            </div>


	</div>
</div>




